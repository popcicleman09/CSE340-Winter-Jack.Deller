<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- details %>
<%- reviews %>
<div class="form_center_box">
  <div class="form_box">
    <% if (loggedin) { %>

          <form id="addReview" action="/inv/addReview" method="post">
            <input type="text" id="review_text" name="review_text" required>
            <input type="hidden" id="account_id" name="account_id" value='<%= accountData.account_id%>'>
            <input type="hidden" id="inv_id" name="inv_id" value='<%= locals.inv_id%>'>
            <input type="submit" value="submit">
          </form>

    <% } else { %>
        <p>If you want to write a review please <a href="/account/login">log in</a></p>
    <% } %>
  </div>
</div>