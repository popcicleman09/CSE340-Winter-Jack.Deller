<% if (title) 
{ %>
    <h1><%= title %></h1>
    <%- messages() %>
    <div class="form_center_box">
        <div class="form_box">
            <form action="/account/register" method="post">
                <label for="account_firstname">First Name</label><br>
                <input type="text" id="account_firstname" name="account_firstname"><br><br>

                <label for="account_lastname">Last Name</label><br>
                <input type="text" id="account_lastname" name="account_lastname"><br><br>

                <label for="account_email">Email</label><br>
                <input type="text" id="account_email" name="account_email"><br><br>

                <label for="account_password">Password</label><br>
                <input type="text" id="account_password" name="account_password"><br><br>
                <p>Password must by >12 characters. 1 capital letter, 1 number, 1 special character</p>
                <input type="submit" value="Register"><br><br>
                <span id="pswdBtn">Show Password</span>
            </form>
        </div>
        <p>Already have and account? <a href="/account/login">Sign-up</a></p>
    </div>    
    <script>
        const pswdBtn = document.querySelector("#pswdBtn");
        pswdBtn.addEventListener("click", function(){
            const pswdInput = document.getElementById("account_password");
            const type = pswdInput.getAttribute("type");
            if (type == "password"){
                pswdInput.setAttribute("type", "text");
                pswdBtn.innerHTML = "Hide Password";
            }else{
                pswdInput.setAttribute("type", "password");
                pswdBtn.innerHTML = "Show Password";
            }
        });
    </script>
    
    <% } else {
      res.redirect('/')
    } %>
